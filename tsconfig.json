{
	"compilerOptions": {
		"module": "CommonJS",
		"removeComments": true,
		"incremental": true,
		"preserveConstEnums": true,
		"outDir": "build",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "ES2019",
		"lib": ["ES2020", "DOM"],
		"useUnknownInCatchVariables": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
